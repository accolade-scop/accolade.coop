<header  class="container-heading project" style="background-image: url('/assets/imgs/{{ project.slug }}/{{ project.logo.src }}');">

    <a href="../index.html" title="Aller à la page d'accueil"></a>

    <nav id="menu">

        <menu>
             <li><a title="Fermer le menu" class="btn-menu">
                    <img alt="Icone close menu" height="30"
 src="/assets/svgs/picto-close.svg" width="40"/>
                </a></li><li><a href="../index.html" title="voir la page d'accueil">Accueil</a></li>
            <li><a href="/pages/a-propos.html" title="voir la page a propos d'Accolade">A propos</a></li>
            <li><a href="/pages/graphic-design.html" title="voir nos créations graphiques">Graphisme</a></li>
            <li><a href="/pages/web-creation.html" title="voir nos sites internet">Sites internet</a></li>
            <li><a href="/pages/laboratoire.html" title="voir nos développements">Laboratoire</a></li>
            <li><a href="/pages/projects-all.html" title="voir toutes nos réalisations">Réalisations</a></li>
            <li><a href="/pages/contact.html" title="voir la page contacts">Contact</a></li>


        </menu>

        <a title="Voir le menu" class="btn-menu">

            <img alt="Icone menu" height="40" src="/assets/svgs/picto-burger.svg" width="40"/>
        </a>

    </nav>

    <span></span>

    <aside>

        <h1><small>Navigation</small></h1>
        <a class="btn btn-projects-nav --reverse" href="/projets/{{ projects | navSlug(project.slug, -1) }}.html" title="Allez au projet précédent">Projet<small>precedent </small></a>
        <a class="btn btn-projects-nav" href="/projets/{{ projects | navSlug(project.slug, -1) }}.html" title="Allez au projey suivant">Projet<small>suivant</small></a>

    </aside>

</header>

<main>

    <!-- SECTION GALERIE -->
    <section id="project-details">

        <h2 class="with-line">{{ project.client.name }}<small>{{ project.year }} - {{ project.name }}</small></h2>

        <header>
            <!-- banner -->
            <img alt="" src="/assets/imgs/{{ project.slug }}/{{ project.banner.src }}"
                 alt="{{ project.logo.description }}" width="810" height="512">

            <aside>

                <section>
                    {% if "Graphisme" in project.tags or "Logo" in project.tags %}
                        <img alt="Création graphique" src="/assets/svgs/picto-creation-graphique.svg">
                    {% endif %}
                    {% if "Site internet" in project.tags %}
                        <img alt="Site Internet" src="/assets/svgs/picto-creation-site.svg">
                    {% endif %}
                    {% if "Développement" in project.tags %}
                        <img alt="Site Internet" src="/assets/svgs/picto-labo.svg">
                    {% endif %}
                </section>

                <ul class="tags-list">
                    {% for tag in project.tags %}
                        <li>{{ tag }}</li>
                    {% endfor %}
                </ul>

                <p>
                    {% if project.description.length > 0 %}
                        {% for paragraph in project.description %}
                            {{ paragraph }}<br/>
                        {% endfor %}
                    {% endif %}
                </p>

            </aside>

            {% if project.url %}
                <a class="btn btn-page-nav" href="{{ project.url }}" target="_blank">Voir le site</a>
            {% endif %}

        </header>

        <section class="masonry-container">

            {% for image in project.images %}
                    <img alt="" src="/assets/imgs/{{ project.slug }}/{{ image.src }}" >
            {% endfor %}

        </section>

    </section>


    <!-- SECTION PROJETS -->
    <section id="projets" class="container-projets">

        <h2>Projets<small>similaires</small></h2>

        <nav class="slider__content">

            {% for p in project | sortbyrelatedness(projects) %}
                <a href="/projets/{{ p.slug }}.html">

                    <img src="/assets/imgs/{{ p.slug }}/{{ p.banner.src }}" alt="{{ p.banner.description }}" width="248"
                         height="157"/>

                    {{ p.client.name }}

                    <em>{{ p.name }}</em>

                </a>

            {% endfor %}

        </nav>

        <div class="slider__nav">

            <input
                    alt="element précédent"
                    id="btn-prec"
                    src="../assets/svgs/picto-groupe-pointe-on.svg"
                    type="image"/>

            <div class="separation"></div>

            <input
                    alt="element suivant"
                    id="btn-next"
                    src="../assets/svgs/picto-groupe-pointe-on.svg"
                    type="image"/>
        </div>

    </section>


    <!-- SECTION CONTACT -->
    <section id="contact">

        <h2>Vous avez un projet ?</h2>

        <h3>N’hesitez pas a nous
            <a class="btn btn-page-nav" href="/pages/contact.html" title="Prenez contact par email">Contacter</a>
        </h3>

    </section>

</main>

<header style="background-image: url('/assets/imgs/{{ project.slug }}/{{ project.banner.src }}');">

    <a href="#" title="Aller à la page d'accueil"></a>

    <nav class="open">

        <menu>
            <li><a>Accueil</a></li>
            <li><a>L'agence</a></li>
            <li><a>Nos service</a></li>
            <li><a>Nos projets</a></li>
            <li><a>Contact</a></li>
            <li><a><img alt="Icone fermer le menu" height="40" src="../assets/svgs/picto-close.svg" width="40"/></a></li>
        </menu>

        <a title="Voir le menu">
            <img alt="Icone ouvrir le menu" height="40" src="../assets/svgs/picto-burger.svg" width="40"/>
        </a>

    </nav>

    <span></span>

    <aside>

        <h1><small>Navigation</small></h1>

        <button class="btn btn-projects-nav" type="button">Projet<small>précédent</small></button>

        <button class="btn btn-projects-nav" type="button">Projet<small>suivant</small></button>

    </aside>

</header>

<main>

    <!-- SECTION GALERIE -->
    <section id="project-details">

        <h2 class="with-line">{{ project.client.name }}<small>{{ project.year }} - {{ project.name }}</small></h2>

        <header>
            <!-- banner -->
            <img alt="" src="/assets/imgs/{{ project.slug }}/{{ project.logo.src }}"
                 alt="{{ project.logo.description }}" width="810" height="512">

            <aside>

                <img alt="Création graphique" src="../assets/svgs/picto-creation-graphique.svg">

                <ul class="tags-list">
                    {% for tag in project.tags %}
                        <li>{{ tag }}</li>
                    {% endfor %}
                </ul>

                <p>
                    {% if project.description.length > 0 %}
                        {% for paragraph in project.description %}
                            {{ paragraph }}<br/>
                        {% endfor %}
                    {% endif %}
                </p>

            </aside>

            <a class="btn btn-page-nav" href="{{ project.url }}" target="_blank">Voir le site</a>

        </header>

        <section class="masonry-container">

            {% for image in project.images %}
                    <img alt="" src="/assets/imgs/{{ project.slug }}/{{ image.src }}" >
            {% endfor %}

        </section>

    </section>


    <!-- SECTION PROJETS -->
    <section id="projets">

        <h2>Projets<small>similaires</small></h2>

        <nav class="slider__content">

            {% for p in project | sortbyrelatedness(projects) %}
                <a href="/projets/{{ p.slug }}.html">

                    <img src="/assets/imgs/{{ p.slug }}/{{ p.logo.src }}" alt="{{ p.logo.description }}" width="248"
                         height="157"/>

                    {{ p.client.name }}

                    <em>{{ p.name }}</em>

                </a>

            {% endfor %}

        </nav>

        <div class="slider__nav">
            <input
                    alt="element précédent"
                    id="btn-prec"
                    src="../assets/svgs/picto-groupe-pointe-off.svg"
                    type="image"/>
            <div class="separation"></div>
            <input
                    alt="element suivant"
                    id="btn-next"
                    src="../assets/svgs/picto-groupe-pointe-off.svg"
                    type="image"/>
        </div>

    </section>


    <!-- SECTION CONTACT -->
    <section id="contact">

        <h2>Vous avez un projet ?</h2>

        <h3>N’hesitez pas a nous
            <button class="btn btn-page-nav" type="button">Contacter</button>
        </h3>

    </section>

</main>

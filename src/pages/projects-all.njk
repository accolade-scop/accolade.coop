<main>

    <!-- LISTE DES TAGS -->
    <section id="tags">
        <em>
            {% set uniqueTags = projects | getUniqueTags(project) %}
            {% for tag in uniqueTags %}
                <span class="tag" data-tag="{{ tag }}">{{ tag }}</span>
                {% if not loop.last %} •{% endif %}
            {% endfor %}
        </em>
    </section>

    <!-- SECTION PROJECTS -->
    <section id="projects">
        {% for p in projects %}
            <a href="/projets/{{ p.slug }}.html" title="voir le detail du projet" data-tags="{{ p.tags }}" class="project">

                <img src="/assets/imgs/{{ p.slug }}/{{ p.banner.src }}" alt="{{ p.banner.description }}" width="248"
                     height="157"/>

                {{ p.client.name }}

                <em>
                    {% for tag in p.tags %}
                        {{ tag }}{% if not loop.last %} •{% endif %}
                    {% endfor %}
                </em>
            </a>

        {% endfor %}
    </section>
 </main>